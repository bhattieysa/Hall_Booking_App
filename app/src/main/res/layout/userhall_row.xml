<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/roundedittext"
    android:backgroundTint="@color/white"
    android:padding="@dimen/_10sdp"
    android:layout_margin="@dimen/_3sdp"
    app:cardCornerRadius="@dimen/_8sdp"
    app:cardElevation="@dimen/_8sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_10sdp">



           <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/profile_image"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/camera" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/profile_image"
        app:layout_constraintStart_toEndOf="@id/profile_image"
        android:text="HAll Name"
        android:textSize="@dimen/_18ssp"
        android:layout_marginStart="@dimen/_5sdp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/hallname"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/hallname"
        app:layout_constraintStart_toEndOf="@id/profile_image"
        android:text="Capacity:"
        android:textSize="@dimen/_15ssp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:textColor="@color/black"
        android:id="@+id/halcapp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/hallname"
            app:layout_constraintStart_toEndOf="@id/halcapp"
            android:text="1000"
            android:textSize="@dimen/_15ssp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:id="@+id/hallcapacity"/>



        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/halcapp"
        app:layout_constraintStart_toEndOf="@id/profile_image"
        android:text="Contact"
        android:textSize="@dimen/_15ssp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:textColor="@color/black"
        android:id="@+id/hallnamdfde"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/halcapp"
            app:layout_constraintStart_toEndOf="@id/hallnamdfde"
            android:text="112345"
            android:textSize="@dimen/_15ssp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:id="@+id/hallcntct"/>


        <ImageView
        android:id="@+id/favBtn"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_gravity="end|top"
        android:src="@drawable/fav_image"
        android:background="@drawable/circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/hallname" />


    <TextView
        android:layout_width="@dimen/_100sdp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_image"
        android:text="Details"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:background="@drawable/roundedittext"
        android:layout_marginTop="@dimen/_5sdp"
        android:id="@+id/seedet"
        android:backgroundTint="@color/bg"
        android:textSize="@dimen/_18ssp"
        android:padding="@dimen/_5sdp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>